<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.saikatdey.shoecase">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/signInTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Home"
            android:theme="@style/MainTheme">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Login"
            android:theme="@style/logInTheme" />
        <activity
            android:name=".CheckLogin"
            android:theme="@style/logInTheme" />
        <activity android:name=".Search"
            />
        <activity android:name=".ItemGrid" />
        <activity android:name=".ItemGridW" />
        <activity android:name=".AnimeActivity" />
        <activity android:name=".Cart" />
        <activity android:name=".CallCart"></activity>
    </application>

</manifest>